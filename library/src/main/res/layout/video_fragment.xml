<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#000000">

    <VideoView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:id="@+id/videoView" />

    <Button
            android:layout_width="68dp"
            android:layout_height="36dp"
            android:text="Close"
            android:id="@+id/close_button" android:layout_gravity="left|top"
            android:background="#00ffffff" android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/videoProgress"
            android:orientation="vertical"
            android:layout_gravity="center">
        <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:layout_gravity="center"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Loading..."
                android:id="@+id/textView" android:layout_below="@+id/videoProgress"
                android:layout_centerHorizontal="true" android:textColor="#ffffff"/>
    </LinearLayout>

</FrameLayout>